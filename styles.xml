<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Questions Theme-->
    <style name="QuestionsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#B00020</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!--Answers Theme-->
    <style name="AnswersTextStyle">
        <item name="android:textColor">#3956e9</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--Button Theme-->
    <style name="ButtonStyle">
        <item name="android:color">#000000</item>
        <item name="android:textColor">#B00020</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Header Theme-->
    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3956e9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Image Theme-->
    <style name="ImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">217dp</item>
    </style>
    <!--Layout Theme-->
    <style name="LinearLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#bdc2f6</item>
    </style>
</resources>
